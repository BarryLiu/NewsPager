<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >
    <ImageView
        android:src="@drawable/a1"
        android:layout_marginRight="10dp"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:id="@+id/iv_news_icon" />

    <TextView
        android:lines="2"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tv_news_detail"
        android:layout_alignTop="@+id/iv_news_icon"
        android:layout_toRightOf="@+id/iv_news_icon"
        android:layout_toEndOf="@+id/iv_news_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv_news_time"
        android:layout_alignBottom="@+id/iv_news_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv_news_zan"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView2"
        android:src="@drawable/icon_a14"
        android:layout_alignBottom="@+id/iv_news_icon"
        android:layout_alignLeft="@+id/tv_news_detail"
        android:layout_alignStart="@+id/tv_news_detail" />
</RelativeLayout>
