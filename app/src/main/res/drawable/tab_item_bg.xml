<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--绘制底层的边框色 -->
    <item>
        <shape>
            <solid android:color="@color/colorGray"></solid>
        </shape>
    </item>
    <!-- 显示右边与上面的描边-->
     <item
         android:right="1dp"
         android:top="1dp"
         >
         <shape>
            <solid android:color="@color/colorWhite"></solid>
         </shape>
     </item>

</layer-list>